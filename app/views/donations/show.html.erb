
<p>
  <strong>Amount:</strong>
  $<%= sprintf('%.2f', @donation.amount) %>
</p>

<p>
  <strong>Donor:</strong>
  <%= @donation.donor_login.first_name %>
</p>

<%= form_tag charges_path(donation_id: @donation.id) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span> <%= pretty_amount(@amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="<%= @description %>"
            data-amount="<%= @amount %>"
            data-email="<%= current_donor_login.email %>"
            data-bitcoin="true"
            data-locale="auto">
            data-bitcoin="true">
            </script>

<% end %>

<%= link_to 'Edit', edit_donation_path(@donation) %> |
<%= link_to 'Back', donations_path %>
