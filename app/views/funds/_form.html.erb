
<div class="new-fund-form">
  	<h1>Create New Fund</h1>
<%= form_with(model: fund, local: true) do |form| %>
  <% if fund.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fund.errors.count, "error") %> prohibited this fund from being saved:</h2>

      <ul>
      <% fund.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category %> <br>
    <%= form.text_field :category, id: :fund_category %>
  </div>

  <div class="field">
    <%= form.label "All Organizations" %>
    <%= collection_select(:organizations, :id, @all_organizations, :id, :name, {}, {class: 'chosen', multiple: true}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= link_to 'Back', donations_path %>
  </div>
<% end %>

</div>
